@model WebApplication2.Models.TodoDashboardViewModel

@{ 
    ViewData["Title"] = "Todo Dashboard";
}

<h1>Todo Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <canvas id="todoChart"></canvas>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chart.js/chart.umd.js"></script>
    <script>
        var ctx = document.getElementById('todoChart').getContext('2d');
        var todoChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Completed', 'Pending'],
                datasets: [{
                    label: '# of Todos',
                    data: [@Model.CompletedCount, @Model.PendingCount],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Todo Status'
                    }
                }
            }
        });
    </script>
}